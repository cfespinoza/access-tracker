<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:id="@+id/goingin_content"
   	android:orientation="vertical" >
	
    <TextView
        android:text="Matrícula"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
        android:padding="3dip"/>

    <AutoCompleteTextView 
        android:id="@+id/registration_tag"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:hint="@string/registration_tag"/>
   
	<TextView
        android:text="Chófer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:padding="3dip" />
        
    <AutoCompleteTextView android:id="@+id/driver_name"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:hint="@string/driver_name_field" />
    
    <Button android:id="@+id/confirm_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_enter"/>

</LinearLayout>